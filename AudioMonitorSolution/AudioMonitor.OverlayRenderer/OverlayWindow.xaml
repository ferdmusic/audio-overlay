<Window x:Class="AudioMonitor.OverlayRenderer.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        ShowActivated="False"
        Focusable="False"
        Width="1920" Height="10"
        Left="0" Top="0"
        Loaded="Window_Loaded"
        >
    <Grid>
        <Rectangle x:Name="OverlayBar" Height="10" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
