<Window x:Class="AudioMonitor.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:AudioMonitor.Core.Models;assembly=AudioMonitor.Core"
        Title="AudioMonitor Settings" Height="600" Width="700" MinHeight="550" MinWidth="650">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Audio Device" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="DeviceComboBox" Width="400" Margin="0,0,0,15" HorizontalAlignment="Left"/>

                        <TextBlock Text="Overlay Position" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="OverlayPositionComboBox" Width="200" Margin="0,0,0,15" HorizontalAlignment="Left"/>

                        <TextBlock Text="Overlay Height (px)" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Slider x:Name="OverlayHeightSlider" Minimum="2" Maximum="50" Value="10" Width="300" HorizontalAlignment="Left"/>
                        <TextBlock Text="{Binding ElementName=OverlayHeightSlider, Path=Value, StringFormat={}{0:F0} px}" Margin="0,0,0,15" HorizontalAlignment="Left"/>

                        <CheckBox x:Name="AutostartCheckBox" Content="Start AudioMonitor with Windows" Margin="0,0,0,15"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Warning Levels">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="ThresholdsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="True"
                              ItemsSource="{Binding WarningLevels.Thresholds, Mode=TwoWay}" Margin="0,0,0,10" Grid.Row="0"
                              HeadersVisibility="Column" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                            <DataGridTextColumn Header="dBFS Value" Binding="{Binding DBFSValue, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                            <DataGridTemplateColumn Header="Color" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding Color, UpdateSourceTrigger=PropertyChanged}" BorderBrush="Black" BorderThickness="1" Height="20" Margin="2"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <!-- Simple Text Box for Hex Color for now. A Color Picker would be better. -->
                                        <TextBox Text="{Binding Color, UpdateSourceTrigger=PropertyChanged}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Add Threshold" Click="AddThreshold_Click" Margin="5"/>
                        <Button Content="Remove Selected" Click="RemoveThreshold_Click" Margin="5"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Acoustic Warning">
                <StackPanel Margin="10">
                    <CheckBox x:Name="AcousticWarningCheckBox" Content="Enable Acoustic Warning (Sine Wave)" Margin="0,0,0,10"/>
                    <TextBlock Text="Warning Volume" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Slider x:Name="AcousticWarningVolumeSlider" Minimum="0" Maximum="1" SmallChange="0.01" LargeChange="0.1" Value="0.75" Width="300" HorizontalAlignment="Left"/>
                    <TextBlock Text="{Binding ElementName=AcousticWarningVolumeSlider, Path=Value, StringFormat={}{0:P0}}" Margin="0,0,0,15" HorizontalAlignment="Left"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save &amp; Close" Width="120" Margin="5" Click="SaveButton_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="100" Margin="5" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
