<Window x:Class="AudioMonitor.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="MainWindow" Height="450" Width="800"
        Closing="Window_Closing">
    <Window.Resources>
        <tb:TaskbarIcon x:Name="MyNotifyIcon" x:Key="MyNotifyIconResource"
                        IconSource="/image.ico"
                        ToolTipText="AudioMonitor UI">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show" Click="ShowMenuItem_Click"/>
                    <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Window.Resources>
    <!-- 
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}" 
    -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="AudioMonitor UI is running!" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Grid.Row="0" Margin="0,20,0,20"/>
        <!-- Style="{StaticResource MaterialDesignHeadline4TextBlock}" -->
        <ComboBox x:Name="DeviceComboBox" Width="400" Margin="10" Grid.Row="1"/>
        <!-- materialDesign:HintAssist.Hint="Select Audio Device" Style="{StaticResource MaterialDesignFloatingHintComboBox}" -->
    </Grid>
</Window>
