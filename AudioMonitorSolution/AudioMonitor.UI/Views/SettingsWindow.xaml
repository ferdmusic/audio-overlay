<Window x:Class="AudioMonitor.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AudioMonitor.UI.Views"
        Title="Audio-Pegelwarnung für Focusrite Scarlett - Einstellungen" 
        Height="700" Width="650" 
        MinHeight="600" MinWidth="600"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <!-- Color Resources (matching HTML CSS variables) -->
        <SolidColorBrush x:Key="BgColorDarkest" Color="#121212"/>
        <SolidColorBrush x:Key="BgColorDark" Color="#1e1e1e"/>
        <SolidColorBrush x:Key="BgColorMedium" Color="#2a2a2e"/>
        <SolidColorBrush x:Key="BgColorLightHover" Color="#38383c"/>
        <SolidColorBrush x:Key="TextColorPrimary" Color="#e0e0e0"/>
        <SolidColorBrush x:Key="TextColorSecondary" Color="#a0a0a0"/>
        <SolidColorBrush x:Key="AccentColorBlue" Color="#0078d4"/>
        <SolidColorBrush x:Key="AccentColorGreen" Color="#107c10"/>
        <SolidColorBrush x:Key="AccentColorYellow" Color="#f0a30a"/>
        <SolidColorBrush x:Key="AccentColorRed" Color="#d13438"/>
        <SolidColorBrush x:Key="BorderColor" Color="#404040"/>
        
        <!-- Glass Effect Brushes -->
        <SolidColorBrush x:Key="GlassBackground" Color="#03ffffff" Opacity="0.03"/>
        <SolidColorBrush x:Key="GlassBackgroundHover" Color="#0fffffff" Opacity="0.06"/>
        <SolidColorBrush x:Key="GlassBorder" Color="#1affffff" Opacity="0.1"/>
        
        <!-- Button Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BgColorMedium}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColorPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource BgColorLightHover}"/>
                                <Setter Property="BorderBrush" Value="#555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" BasedOn="{StaticResource ModernButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColorBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentColorBlue}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005a9e"/>
                    <Setter Property="BorderBrush" Value="#005a9e"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource BgColorMedium}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColorPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BgColorMedium}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColorPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- Toggle Switch Style -->
        <Style x:Key="ModernToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="SwitchTrack" 
                                    Width="44" Height="24" 
                                    Background="{StaticResource BgColorMedium}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="12"/>
                            <Ellipse x:Name="SwitchThumb" 
                                     Width="18" Height="18"
                                     Fill="White"
                                     HorizontalAlignment="Left"
                                     Margin="3,0,0,0">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="ThumbTransform"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchTrack" Property="Background" Value="{StaticResource AccentColorBlue}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="20" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Slider Style -->
        <Style x:Key="ModernSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="{StaticResource BgColorMedium}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColorPrimary}"/>
            <Setter Property="Height" Value="6"/>
        </Style>
        
        <!-- Glass Card Style -->
        <Style x:Key="GlassCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource GlassBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GlassBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <BlurEffect Radius="0"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- Main Container with Glass Effect -->
    <Border Background="{StaticResource BgColorDark}" 
            CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="Black" Opacity="0.4"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BgColorMedium}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="0,0,0,1"
                    Padding="20,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Audio-Pegelwarnung" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextColorSecondary}"
                               VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">                        <Button Style="{StaticResource ModernButtonStyle}" 
                                Width="30" Height="30" 
                                Margin="5,0"
                                Background="Transparent"
                                BorderBrush="Transparent">
                            <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4Z" 
                                  Fill="{StaticResource TextColorSecondary}"
                                  Width="16" Height="16"/>
                        </Button>
                        <Button Style="{StaticResource ModernButtonStyle}" 
                                Width="30" Height="30"
                                Background="Transparent"
                                BorderBrush="Transparent">
                            <Ellipse Fill="DarkCyan" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="25,20">
                <StackPanel>
                    
                    <TextBlock Text="Einstellungen" 
                               FontSize="28" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextColorPrimary}"
                               Margin="0,0,0,20"/>
                    
                    <!-- Audio Input Section -->
                    <Border Style="{StaticResource GlassCardStyle}" Padding="25">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Audio-Eingangsgerät" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextColorPrimary}"/>
                                <Border Grid.Column="1" 
                                        Background="#4c9383"
                                        CornerRadius="8"
                                        Padding="6,2">
                                    <TextBlock Text="FA01" 
                                               FontSize="10" 
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </Grid>
                            
                            <!-- Live Audio Level Display -->
                            <Border Background="{StaticResource BgColorMedium}"
                                    CornerRadius="6"
                                    Height="60"
                                    Margin="0,0,0,15">
                                <Grid Margin="15,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Grid Grid.Row="0" Margin="0,8,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock x:Name="CurrentLevelText" 
                                                   Text="Aktueller Pegel: -18.2 dBFS" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource TextColorSecondary}"/>
                                        <TextBlock Grid.Column="1"
                                                   x:Name="PeakLevelText"
                                                   Text="Peak: -12.1 dBFS" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource TextColorSecondary}"/>
                                    </Grid>
                                    
                                    <Border Grid.Row="1" 
                                            Background="{StaticResource BgColorDark}"
                                            CornerRadius="6"
                                            Height="12">
                                        <Rectangle x:Name="AudioLevelBar"
                                                   Fill="{StaticResource AccentColorGreen}"
                                                   HorizontalAlignment="Left"
                                                   Width="0"
                                                   RadiusX="6" RadiusY="6"/>
                                    </Border>
                                </Grid>
                            </Border>
                              <ComboBox x:Name="AudioInputComboBox" 
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      SelectionChanged="AudioInputComboBox_SelectionChanged">
                            </ComboBox>
                        </StackPanel>
                    </Border>
                    
                    <!-- Threshold Configuration Section -->
                    <Border Style="{StaticResource GlassCardStyle}" Padding="25">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Warnschwellenwerte" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextColorPrimary}"/>
                                <Border Grid.Column="1" 
                                        Background="#4c9383"
                                        CornerRadius="8"
                                        Padding="6,2">
                                    <TextBlock Text="FA03" 
                                               FontSize="10" 
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </Grid>
                            
                            <TextBlock Text="Pegelstufen und zugehörige dBFS-Schwellenwerte definieren." 
                                       FontSize="12"
                                       Foreground="{StaticResource TextColorSecondary}"
                                       Margin="0,0,0,15"/>
                            
                            <Border Background="{StaticResource BgColorMedium}"
                                    CornerRadius="6"
                                    Padding="20"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1,0,0,0">
                                <StackPanel>
                                    <!-- Green Threshold -->
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Ellipse Width="20" Height="20" 
                                                 Fill="{StaticResource AccentColorGreen}"
                                                 Margin="0,0,15,0"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="Sicher (Grün) bis:" 
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextColorPrimary}"
                                                   VerticalAlignment="Center"
                                                   MinWidth="120"/>
                                        <TextBox Grid.Column="3"
                                                 x:Name="ThresholdSafeTextBox"
                                                 Text="-12"
                                                 Style="{StaticResource ModernTextBoxStyle}"
                                                 Width="80"
                                                 HorizontalAlignment="Right"
                                                 TextAlignment="Right"
                                                 Margin="0,0,15,0"/>
                                        <TextBlock Grid.Column="4"
                                                   Text="dBFS" 
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextColorSecondary}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                    
                                    <!-- Yellow Threshold -->
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Ellipse Width="20" Height="20" 
                                                 Fill="{StaticResource AccentColorYellow}"
                                                 Margin="0,0,15,0"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="Achtung (Gelb) bis:" 
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextColorPrimary}"
                                                   VerticalAlignment="Center"
                                                   MinWidth="120"/>
                                        <TextBox Grid.Column="3"
                                                 x:Name="ThresholdWarningTextBox"
                                                 Text="-6"
                                                 Style="{StaticResource ModernTextBoxStyle}"
                                                 Width="80"
                                                 HorizontalAlignment="Right"
                                                 TextAlignment="Right"
                                                 Margin="0,0,15,0"/>
                                        <TextBlock Grid.Column="4"
                                                   Text="dBFS" 
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextColorSecondary}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                    
                                    <!-- Red Threshold -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Ellipse Width="20" Height="20" 
                                                 Fill="{StaticResource AccentColorRed}"
                                                 Margin="0,0,15,0"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="Kritisch (Rot) ab:" 
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextColorPrimary}"
                                                   VerticalAlignment="Center"
                                                   MinWidth="120"/>
                                        <TextBox Grid.Column="3"
                                                 x:Name="ThresholdCriticalTextBox"
                                                 Text="-3"
                                                 Style="{StaticResource ModernTextBoxStyle}"
                                                 Width="80"
                                                 HorizontalAlignment="Right"
                                                 TextAlignment="Right"
                                                 Margin="0,0,15,0"/>
                                        <TextBlock Grid.Column="4"
                                                   Text="dBFS" 
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextColorSecondary}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            
                            <TextBlock Text="Farbverlauf: Standard Grün-Gelb-Rot. (Konfigurierbarkeit idealerweise später)" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextColorSecondary}"
                                       Margin="0,15,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Visual Overlay Section -->
                    <Border Style="{StaticResource GlassCardStyle}" Padding="25">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Visuelles Overlay" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextColorPrimary}"/>
                                <Border Grid.Column="1" 
                                        Background="#4c9383"
                                        CornerRadius="8"
                                        Padding="6,2">
                                    <TextBlock Text="FA04" 
                                               FontSize="10" 
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </Grid>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Position (Monitorrand):" 
                                               FontSize="12"
                                               Foreground="{StaticResource TextColorSecondary}"
                                               Margin="0,0,0,8"/>
                                    <ComboBox x:Name="OverlayPositionComboBox" 
                                              Style="{StaticResource ModernComboBoxStyle}">
                                        <ComboBoxItem Content="Oberer Rand" IsSelected="True"/>
                                        <ComboBoxItem Content="Unterer Rand"/>
                                        <ComboBoxItem Content="Linker Rand"/>
                                        <ComboBoxItem Content="Rechter Rand"/>
                                    </ComboBox>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="Dicke/Breite:" 
                                               FontSize="12"
                                               Foreground="{StaticResource TextColorSecondary}"
                                               Margin="0,0,0,8"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="OverlayThicknessTextBox"
                                                 Text="5"
                                                 Style="{StaticResource ModernTextBoxStyle}"
                                                 Margin="0,0,8,0"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="px" 
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextColorSecondary}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                            
                            <TextBlock Text="Dynamische Transparenz und Verhalten im kritischen Bereich gemäß FA04.2, FA04.3." 
                                       FontSize="12"
                                       Foreground="{StaticResource TextColorSecondary}"
                                       Margin="0,15,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Acoustic Warning Section -->
                    <Border Style="{StaticResource GlassCardStyle}" Padding="25">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Akustische Warnung" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextColorPrimary}"/>
                                <Border Grid.Column="1" 
                                        Background="#4c9383"
                                        CornerRadius="8"
                                        Padding="6,2">
                                    <TextBlock Text="FA05" 
                                               FontSize="10" 
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </Grid>
                            
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="Akustische Warnung (Sinuswelle) aktivieren" 
                                           FontSize="14"
                                           Foreground="{StaticResource TextColorSecondary}"
                                           VerticalAlignment="Center"/>
                                <CheckBox x:Name="AcousticWarningsCheckBox" 
                                          Grid.Column="1"
                                          Style="{StaticResource ModernToggleSwitchStyle}"
                                          IsChecked="True"/>
                            </Grid>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="Lautstärke:" 
                                           FontSize="14"
                                           Foreground="{StaticResource TextColorSecondary}"
                                           VerticalAlignment="Center"
                                           MinWidth="80"
                                           Margin="0,0,16,0"/>
                                <Slider x:Name="AcousticVolumeSlider" 
                                        Grid.Column="1"
                                        Style="{StaticResource ModernSliderStyle}"
                                        Minimum="0" 
                                        Maximum="100" 
                                        Value="75"
                                        ValueChanged="AcousticVolumeSlider_ValueChanged"/>
                                <TextBlock x:Name="AcousticVolumeText"
                                           Grid.Column="2"
                                           Text="75%" 
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource AccentColorBlue}"
                                           VerticalAlignment="Center"
                                           MinWidth="40"
                                           TextAlignment="Right"
                                           Margin="16,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- System Settings Section -->
                    <Border Style="{StaticResource GlassCardStyle}" Padding="25">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel>
                                <TextBlock Text="Mit Windows starten" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextColorPrimary}"/>
                            </StackPanel>
                            
                            <Border Grid.Column="1" 
                                    Background="#4c9383"
                                    CornerRadius="8"
                                    Padding="6,2"
                                    Margin="0,0,15,0">
                                <TextBlock Text="FA07" 
                                           FontSize="10" 
                                           FontWeight="Bold"
                                           Foreground="White"/>
                            </Border>
                            
                            <CheckBox x:Name="AutostartCheckBox" 
                                      Grid.Column="2"
                                      Style="{StaticResource ModernToggleSwitchStyle}"
                                      IsChecked="True"/>
                        </Grid>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="{StaticResource BgColorMedium}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="0,1,0,0"
                    Padding="25,15">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="Einstellungen speichern (FA08)" 
                            Style="{StaticResource ModernButtonStyle}"
                            Margin="0,0,10,0"
                            Click="SaveSettings_Click"/>
                    <Button Content="Überwachung starten" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,0,10,0"
                            Click="StartMonitoring_Click"/>
                    <Button Content="In Tray minimieren (FA07)" 
                            Style="{StaticResource ModernButtonStyle}"
                            Click="MinimizeToTray_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
